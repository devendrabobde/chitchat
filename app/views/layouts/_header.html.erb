<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "AirtelFriends", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
        <% if signed_in? %>
        
          <li><%= link_to current_user.name, current_user %></li>
        <% end %>
          <li><%= link_to "Home", root_path %></li>
          
          <% if signed_in? %>
            <li><%= link_to "Users", users_path %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "View Your Profile", current_user %></li>
                <li><%= link_to "Delete your Account", delete_account_path, data: { confirm: "R You sure, do you want to delete your account?" }%></li>
                <li><%= link_to "Edit Your Profile", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>